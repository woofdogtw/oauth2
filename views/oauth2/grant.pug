extends layout

block content
  .container
    form.form-signin(method='post' action='/oauth2/grant' role='form')
      h2.form-signin-heading Let this app access your info?
      h3= client_name
      .form-group
        input#allow(type='hidden' name='allow' value='no')
        input(type='hidden' name='user_id'       value=user_id)
        input(type='hidden' name='client_id'     value=client_id)
        input(type='hidden' name='response_type' value=response_type)
        input(type='hidden' name='redirect_uri'  value=redirect_uri)
        - if (scope) {
          input(type='hidden' name='scope' value=scope)
        - }
        - if (state) {
          input(type='hidden' name='state' value=state)
        - }
        .row
          .col-md-3.col-md-offset-6
            button.btn.btn-primary.btn-block(type='submit' onclick='document.getElementById("allow").value="yes";') Yes
          .col-md-3
            button.btn.btn-info.btn-block(type='submit' onclick='document.getElementById("allow").value="no";') No